@{
    ViewData["Title"] = "Browse Cars";
}
@model IEnumerable<CarRentalFrontEnd.Models.Car>

<div class="container mt-5">
    <h1 class="text-center mb-4">Browse Our Cars</h1>
    <div class="row">
        @foreach (var car in Model) // Loop through each car
        {
            <div class="col-md-4 mb-3">
                <div class="card">
                    <!-- Image -->
                    <img src="@Url.Content("~/image/" + car.ImagePath)" class="card-img-top" alt="@car.Model" />


                    <!-- Car Details -->
                    <div class="card-body">
                        <h5 class="card-title">@car.Model</h5>
                        <p class="card-text"><strong>Brand:</strong> @car.Brand</p>
                        <p class="card-text"><strong>Price Per Day:</strong> RM @car.PricePerDay</p>
                        <a asp-action="Rent" asp-controller="Cars" asp-route-id="@car.Id" class="btn btn-primary">Rent</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>