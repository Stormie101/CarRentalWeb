@{
    ViewData["Title"] = "Feedback";
}

@section Styles {
    <style>
        body {
            background-color: #f9f9f9;
        }

        .feedback-title {
            color: #343a40;
            font-weight: 700;
        }

        .feedback-card {
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .rating-dropdown {
            transition: transform 0.3s ease;
        }

            .rating-dropdown:hover {
                transform: scale(1.05);
            }

        .btn-submit {
            background-color: #28a745;
            color: white;
            border: none;
        }

            .btn-submit:hover {
                background-color: #218838;
            }
    </style>
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="feedback-title">We Value Your Feedback</h1>
        <p class="text-muted">Help us improve your car rental experience!</p>
    </div>
    <div class="card feedback-card p-4">
        <form asp-action="SubmitFeedback" method="post">
            <div class="mb-3">
                <label for="overallSatisfaction" class="form-label">Overall Satisfaction</label>
                <select id="overallSatisfaction" name="OverallSatisfaction" class="form-select rating-dropdown" required>
                    <option value="Excellent">Excellent</option>
                    <option value="Good">Good</option>
                    <option value="Neutral">Neutral</option>
                    <option value="Poor">Poor</option>
                    <option value="Terrible">Terrible</option>
                </select>
            </div>
            <div class="mb-3">
                <label for="carCondition" class="form-label">Car Condition</label>
                <select id="carCondition" name="CarCondition" class="form-select rating-dropdown" required>
                    <option value="Excellent">Excellent</option>
                    <option value="Good">Good</option>
                    <option value="Neutral">Neutral</option>
                    <option value="Poor">Poor</option>
                    <option value="Terrible">Terrible</option>
                </select>
            </div>
            <div class="mb-3">
                <label for="pickupProcess" class="form-label">Pick-Up Process</label>
                <select id="pickupProcess" name="PickupProcess" class="form-select rating-dropdown" required>
                    <option value="Excellent">Excellent</option>
                    <option value="Good">Good</option>
                    <option value="Neutral">Neutral</option>
                    <option value="Poor">Poor</option>
                    <option value="Terrible">Terrible</option>
                </select>
            </div>
            <div class="mb-3">
                <label for="dropoffProcess" class="form-label">Drop-Off Process</label>
                <select id="dropoffProcess" name="DropoffProcess" class="form-select rating-dropdown" required>
                    <option value="Excellent">Excellent</option>
                    <option value="Good">Good</option>
                    <option value="Neutral">Neutral</option>
                    <option value="Poor">Poor</option>
                    <option value="Terrible">Terrible</option>
                </select>
            </div>
            <div class="mb-3">
                <label for="customerService" class="form-label">Customer Service</label>
                <select id="customerService" name="CustomerService" class="form-select rating-dropdown" required>
                    <option value="Excellent">Excellent</option>
                    <option value="Good">Good</option>
                    <option value="Neutral">Neutral</option>
                    <option value="Poor">Poor</option>
                    <option value="Terrible">Terrible</option>
                </select>
            </div>
            <div class="mb-3">
                <label for="additionalFeedback" class="form-label">Additional Feedback</label>
                <textarea id="additionalFeedback" name="AdditionalFeedback" class="form-control" rows="3" placeholder="Share your thoughts..." required></textarea>
            </div>
            <button type="submit" class="btn btn-submit w-100">Submit Feedback</button>
        </form>

    </div>
</div>
