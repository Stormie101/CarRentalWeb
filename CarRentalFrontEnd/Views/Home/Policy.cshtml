@{
    ViewData["Title"] = "Rental Policies";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Rental Policies</h1>
    <p class="text-center text-muted">Please review our policies before booking your rental.</p>

    <div class="card shadow-sm">
        <div class="card-body">
            <h3 class="text-primary">Important Policies</h3>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <strong>No Refunds Within 3 Days of Due Date:</strong> Cancellations made within 3 days of the rental due date are non-refundable.
                </li>
                <li class="list-group-item">
                    <strong>Damage Policy:</strong> Any damages incurred during the rental period are the responsibility of the renter.
                </li>
                <li class="list-group-item">
                    <strong>Late Return Policy:</strong> Late returns will be charged an additional fee of $50 per day.
                </li>
                <li class="list-group-item">
                    <strong>Pickup & Drop-Off Timing:</strong> All pickups and drop-offs must be completed within the specified hours (9 AM - 6 PM).
                </li>
                <li class="list-group-item">
                    <strong>Age Requirement:</strong> Renters must be 21 years or older and possess a valid driver’s license.
                </li>
            </ul>
        </div>
    </div>

    <div class="alert alert-info mt-4">
        <p class="mb-0">By booking a car rental, you agree to abide by these policies.</p>
    </div>
</div>
