@using Microsoft.AspNetCore.Mvc.RazorPages
@{
    Layout = "_Layout";
}

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
}

<!-- Hero Section -->
<header class="container-fluid text-center py-5" style="background-color:#e3daff;">
    <div class="container">
        <h1 class="display-4">Welcome to ReserGo</h1>
        <p class="lead">Find your perfect car for rent at the best prices.</p>
        @* <a href="@Url.Action(\"")" class="btn btn-light btn-lg">Browse Cars</a> *@
    </div>
</header>

<!-- Features Section -->
<section class="container mt-5">
    <div class="row text-center">
        <div class="col-md-4">
            <i class="bi bi-car-front display-3 text-primary"></i>
            <h3>Wide Selection</h3>
            <p>Choose from a variety of vehicles to match your needs.</p>
        </div>
        <div class="col-md-4">
            <i class="bi bi-cash-stack display-3 text-primary"></i>
            <h3>Affordable Prices</h3>
            <p>Competitive pricing for every budget.</p>
        </div>
        <div class="col-md-4">
            <i class="bi bi-shield-check display-3 text-primary"></i>
            <h3>Secure Rentals</h3>
            <p>Reliable and trustworthy service for peace of mind.</p>
        </div>
    </div>
</section>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}
