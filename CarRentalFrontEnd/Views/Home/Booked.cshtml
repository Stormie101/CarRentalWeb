@model IEnumerable<CarRentalFrontEnd.Models.Booked>

@{
    ViewData["Title"] = "Your Booked Cars";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Your Booked Cars</h1>
    <div class="row">
        @foreach (var booking in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    <img src="@Url.Content("~/image/" + booking.CarImage)" class="card-img-top" alt="@booking.CarName">
                    <div class="card-body">
                        <h5 class="card-title text-center">@booking.CarName</h5>
                        <hr>
                        <p><strong>Pickup Date:</strong> @booking.PickupDate.ToShortDateString()</p>
                        <p><strong>Drop-Off Date:</strong> @booking.DropoffDate.ToShortDateString()</p>
                        <p><strong>Price:</strong> RM @booking.TotalPrice</p>
                        <form asp-action="CancelBooking" method="post">
                            <input type="hidden" name="id" value="@booking.Id" />
                            <div class="d-grid">
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Confirm ke bro')">Cancel Booking</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
